@{
    ViewBag.Title = "Thống kê Doanh thu";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="container mt-4">
    <h2>Thống kê Doanh thu</h2>

    <div class="row mb-3">
        <div class="col">
            <label for="specificDate" class="form-label">Chọn ngày:</label>
            <input type="date" id="specificDate" class="form-control" style="width: 50%"/>
            <button type="button" class="btn btn-primary mt-2" onclick="loadSpecificRevenueData('day')">Xem doanh thu</button>
        </div>

        <div class="col">
            <label for="specificMonth" class="form-label">Chọn tháng:</label>
            <input type="month" id="specificMonth" class="form-control" style="width: 60%"/>
            <button type="button" class="btn btn-primary mt-2" onclick="loadSpecificRevenueData('month')">Xem doanh thu</button>
        </div>

        <div class="col">
            <label for="specificYear" class="form-label">Chọn năm:</label>
            <input type="number" id="specificYear" class="form-control" min="2000" max="2100" value="@DateTime.Now.Year" style="width: 40%"/>
            <button type="button" class="btn btn-primary mt-2" onclick="loadSpecificRevenueData('year')">Xem doanh thu</button>
        </div>
    </div>

    <div style="width: 100%; height: 400px;">
        <canvas id="revenueChart" width="100%" height="400"></canvas>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
