
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div id="container" class="container">
    <div style="background: #EFF0F5" class="main">
        <div class="login">
            <div class="login-title">
                <div class="login-title-big">
                   
                    <h6 style="color: red">@ViewBag.LoginFail</h6>
                </div>
            </div>
            @using (Html.BeginForm("Login", "User"))
            {
                @Html.ValidationSummary(false)
                <div class="login-form">
                    <div class="login-form-left">
                        <label>
                            Tên đăng nhập*
                        </label>
                        <input type="text" name="TENDANGNHAP" placeholder="Vui lòng nhập tên đăng nhập" pattern="^(?=.*\d)(?=.*[a-zA-Z])[a-zA-Z0-9]{8,}$" title="Tên đăng nhập phải có ít nhất 8 ký tự, bao gồm chữ và số." required />
                        <label>
                            Mật khẩu*
                        </label>
                        <input type="password" name="MATKHAU" placeholder="Vui lòng nhập mật khẩu của bạn tối thiểu 8 ký tự" pattern="^(?=.*\d)(?=.*[a-zA-Z])[a-zA-Z0-9]{8,}$" title="Mật khẩu phải có ít nhất 8 ký tự, bao gồm chữ và số." required />
                        <div class="login-forgot">
                            <a href="@Url.Action("ResetPass", "User")">Reset password</a>
                        </div>

                    </div>
                    <div class="login-form-right">
                        <div class="button-first">
                            <button type="submit">
                                ĐĂNG NHẬP
                            </button>
                          
                        </div>
                        
                    </div>
                </div>
            }
        </div>
    </div>
</div>

