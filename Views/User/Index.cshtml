@model IEnumerable<TapHoa.Models.NHANVIEN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@{var admin = Session["ADMIN"] as TapHoa.Models.ADMIN;}
@if (admin != null)
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Danh sách nhân viên</h4>
                        <p class="category">@Html.ActionLink("Tạo mới", "Create", null, new { @class = "btn btn-primary" })</p>
                    </div>
                    <div class="content table-responsive table-full-width">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>Mã nhân viên</th>
                                    <th>Tên nhân viên</th>
                                    <th>Địa chỉ</th>
                                    <th>Số điện thoại</th>
                                    <th>Tên đăng nhập</th>
                                    <th>Mật khẩu</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.MANV)</td>
                                    <td>@Html.DisplayFor(modelItem => item.HOTEN)</td>
                                    <td>@Html.DisplayFor(modelItem => item.DCHI)</td>
                                    <td>@Html.DisplayFor(modelItem => item.SDT)</td>
                                    <td>@Html.DisplayFor(modelItem => item.TENDANGNHAP)</td>
                                    <td>@Html.DisplayFor(modelItem => item.MATKHAU)</td>
                                    <td>
                                        @Html.ActionLink("Sửa", "Edit", new { id = item.MANV }, new { @class = "btn btn-success", style = "margin: 0px 5px" })
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.MANV }, new { @class = "btn btn-warning", style = "margin: 0px 5px" })
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
}
