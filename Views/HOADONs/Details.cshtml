@model TapHoa.Models.HOADON

@{
    ViewBag.Title = "Chi tiết hóa đơn";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2 class="mt-4">Chi tiết hóa đơn</h2>

<div class="card mt-4">
    <div class="card-header">
        <h4 class="card-title">Hóa đơn</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dd class="col-sm-3">
                Số hóa đơn
            </dd>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.SOHD)
            </dd>
            <dd class="col-sm-3">
                Ngày tạo
            </dd>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.NGHD)
            </dd>
            <dd class="col-sm-3">
                Nhân viên tạo
            </dd>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.NHANVIEN.HOTEN)
            </dd>
            <dd class="col-sm-3">
                Tổng số lượng sản phẩm
            </dd>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.TONGSL)
            </dd>
            <dd class="col-sm-3">
                Tổng tiền hóa đơn
            </dd>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.TONGTIEN)
            </dd>
            <dd class="col-sm-3">
                Số tiền phải trả
            </dd>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.PHAITRA)
            </dd>
            <dd class="col-sm-3">
                Số tiền thói lại
            </dd>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.TIENTRALAI)
            </dd>
        </dl>
    </div>
</div>

<h4 class="mt-4">Danh sách sản phẩm</h4>
<div class="card mt-2">
    <div class="card-body">
        <table class="table table-hover table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>
                        Tên sản phẩm
                    </th>
                    <th>
                        Số lượng
                    </th>
                    <th>
                        Đơn giá
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CTHDs)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SANPHAM.TENSP)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SL)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DONGIA)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="mt-4">
    @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
</div>
