        <dd>
            <img src="~/Images/@Model.HINHANH" width="50" />
        </dd>

        <dt>
            Đơn vị tính
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DVT.TENDVT)
        </dd>

        <dt>
            Loại sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LOAIHANG.TENLOAI)
