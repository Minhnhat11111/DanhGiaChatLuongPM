@model TapHoa.Models.SANPHAM

@{ ViewBag.Title = "Edit";
                Layout = "~/Views/Shared/_MainLayout.cshtml"; }

<div class="container mt-4">
    @using (Html.BeginForm("Edit", "SANPHAMs", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
@Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Sản phẩm</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                    @Html.HiddenFor(model => model.MASP)

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Tên sản phẩm</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TENSP, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TENSP, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Đơn vị tính</label>
                        <div class="col-md-10">
                            @Html.DropDownList("MADVT", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MADVT, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Giá</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.GIAHIENHANH, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.GIAHIENHANH, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Số lượng</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SOLUONG, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SOLUONG, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Số lượng đã bán</label>
                        <div class="col-md-10">
                            <p class="form-control-static">@Model.SOLUONGDABAN</p>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Hình sản phẩm</label>
                        <div class="col-md-10">
                            <input type="file" name="HINHANH" class="form-control-file" />
                            <br />
                            <img src="~/Images/@Model.HINHANH" width="50" class="img-thumbnail" /> <span>(Ảnh hiện tại)</span>
                            @Html.ValidationMessageFor(model => model.HINHANH, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Loại sản phẩm</label>
                        <div class="col-md-10">
                            @Html.DropDownList("MALOAI", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MALOAI, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-10 offset-md-2">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </div>
                </div>}

    <div class="mt-3">
        @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>