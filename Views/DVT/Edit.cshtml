@model TapHoa.Models.DVT

@{ ViewBag.Title = "Edit";
                Layout = "~/Views/Shared/_MainLayout.cshtml"; }

<div class="container mt-4">
    <h2>Chỉnh sửa đơn vị tính</h2>

    @using (Html.BeginForm())
    {
@Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Đơn vị tính</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                    @Html.HiddenFor(model => model.MADVT)

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Đơn vị tính</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TENDVT, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TENDVT, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-10 offset-md-2">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </div>
                </div>}

    <div class="mt-3">
        @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>