
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@{ var nhanvien = Session["NHANVIEN"] as TapHoa.Models.NHANVIEN;
    var admin = Session["ADMIN"] as TapHoa.Models.ADMIN;}
@if (nhanvien != null || admin != null)
{
    <div class="container-fluid py-4">
        <div class="row g-4">

            <div class="col-md-6">
                <form asp-controller="BanHang" asp-action="Index">
                    <p>
                        <input type="text" name="SearchString" />
                        <input type="submit" value="Search" class="btn btn-success" />
                    </p>
                </form>

                <div class="mb-3">
                    <label class="form-label fw-bold">Danh sách sản phẩm</label>
                    <div id="productList">
                        @Html.Partial("DanhSachSanPhamBanHang")
                    </div>
                </div>
            </div>


            <div class="col-md-6">
                <div id="selected-products" class="card p-4 mb-4" style="max-height: 300px; overflow-y: auto;">

                    <!-- Repeat the above block for each product -->
                </div>

                <div class="card p-4 mb-4">
                    <div class="mb-2">Tổng sản phẩm: <span id="total-quantity">0</span></div>
                    <div class="mb-2">Tổng tiền: <span id="total-price">0 VND</span></div>
                    <div class="mb-2">
                        Tiền nhận:
                        <input type="number" id="amount-received" class="form-control text-center" style="width: 100px" inputmode="numeric" value="" />
                    </div>
                    <div class="mb-2">Tiền thối: <span id="change-amount">0 VND</span></div>
                </div>

                <div class="d-flex justify-content-between">
                    <button id="create-order" type="button" class="btn btn-primary">Tạo đơn hàng</button>
                    <button id="complete-order" type="button" class="btn btn-success" style="display: none;">Hoàn thành</button>
                    <button id="print-receipt" type="button" class="btn btn-secondary" style="display: none;">In hóa đơn</button>
                </div>

            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
}

